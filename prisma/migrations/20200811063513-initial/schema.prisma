datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(Student)
  createdAt DateTime @default(now())
  courses   Course[] @relation(references: [id])
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String
  createdAt   DateTime @default(now())
  users       User[]   @relation(references: [id])
}

enum UserRole {
  Admin
  Instructor
  Student
}
